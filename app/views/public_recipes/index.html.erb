<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Public Recipes</h1>
    <% if can? :manage, Recipe %>
      <%= link_to 'New recipe', new_user_recipe_path(current_user), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="recipes" class="min-w-full">
    <%= render @public_recipes %>
  </div>
</div>