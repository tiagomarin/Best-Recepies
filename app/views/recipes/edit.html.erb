<div class="mx-auto w-5/6 flex flex-col items-center">
  <h1 class="font-bold text-4xl">Editing recipe</h1>
  <div class="w-full flex gap-10 mx-auto items-center">
    <div class="w-2/5 flex flex-col">
      <%= render "form", recipe: @recipe %>
    </div>
    <div class="w-3/5 flex flex-col">
      <%= render "ingredients" %>
    </div>
  </div>
  <div class="w-full flex gap-5 items-left mt-6">
    <%= link_to "Back to this recipe", user_recipe_path(current_user, @recipe), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to my recipes", user_recipes_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>    
</div>
