<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= @recipe.name %></h1>
  </div>
  <h2 class="font-bold text-2xl">Ingredients</h2>

  <div id="recipe_foods" class="min-w-full my-5">
    <%= render @recipe_foods %>
  </div>

  <%= link_to 'Add ingredient', new_user_recipe_recipe_food_path(current_user,@recipe), class: "ml-2 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %>
  <%= link_to "Back to recipes", user_recipes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
